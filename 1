package main

import "fmt"

func main() {
    var numero1 float64
    fmt.Print("Digite o primeiro número: ")
    fmt.Scanln(&numero1)

    var numero2 float64
    fmt.Print("Digite o segundo número: ")
    fmt.Scanln(&numero2)

    soma := numero1 + numero2

    fmt.Printf("A soma de %.2f e %.2f é %.2f\n", numero1, numero2, soma)
}
